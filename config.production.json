{
  "url": "http://localhost:2368",
  "database": {
    "client": "sqlite3",
    "connection": {
      "filename": "/var/lib/ghost/content/data/ghost.db"
    },
    "useNullAsDefault": true
  },
  "server": {
    "host": "0.0.0.0",
    "port": 2368
  },
  "mail": {
    "transport": "Direct"
  },
  "logging": {
    "transports": [
      "file",
      "stdout"
    ],
    "level": "info"
  },
  "process": "systemd",
  "security": {
    "staffDeviceVerification": true
  },
  "paths": {
    "contentPath": "/var/lib/ghost/content"
  }
}
